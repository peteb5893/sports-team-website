<h1>Moderator's Index</h1>

<table class="table table-bordered table-hover">
	<thead>
		<tr>
			<th>Username</th>
			<th>Forename</th>
			<th>Surname</th>
			<th>Created At</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @moderators.each do|moderator| %>
			<tr>
				<td><%= moderator.username %></td>
				<td><%= moderator.forename %></td>
				<td><%= moderator.surname %></td>
				<td><%= time_ago_in_words(moderator.created_at) %> ago</td>
				<td><%= link_to 'Edit' , edit_admin_moderator_path(moderator) %></td>
			</tr>
		<% end %>
	</tbody>
</table>